# .ebextensions/01_django.config

option_settings:
    aws:elasticbeanstalk:application:environment:
        DJANGO_SETTINGS_MODULE: portfolio.settings
        PYTHONPATH: /var/app/current:$PYTHONPATH
    aws:elasticbeanstalk:container:python:
        WSGIPath: portfolio.wsgi:application

container_commands:
    01_makemigrations:
        command: "source /var/app/venv/*/bin/activate && python3 /var/app/current/manage.py makemigrations --no input"
        leader_only: true
    02_migrate:
        command: "source /var/app/venv/*/bin/activate && python3 /var/app/current/manage.py migrate --noinput"
        leader_only: true